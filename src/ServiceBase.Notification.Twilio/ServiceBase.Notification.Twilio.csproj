<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <PackageId>ServiceBase.Twilio</PackageId>
        <Product>ServiceBase.Twilio</Product>
        <PackageVersion>$(VersionSuffix)</PackageVersion>
        <Description>Twilio SMS sender for ServiceBase.Notification.Sms</Description>
        <PackageTags>servicebase twilio sms</PackageTags>
        <PackageProjectUrl>https://github.com/aruss/ServiceBase</PackageProjectUrl>
        <Authors>Russlan Akiev</Authors>
        <Copyright>Copyright (c) Russlan Akiev. All rights reserved.</Copyright>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
        <OutputType>Library</OutputType>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
        <DefineConstants>RELEASE</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
        <DefineConstants>TRACE;DEBUG</DefineConstants>
    </PropertyGroup>

    <ItemGroup>
      <None Remove="ServiceBase.Notification.Twilio.nuspec" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\ServiceBase\ServiceBase.csproj">
            <Private>false</Private>
            <ExcludeAssets>runtime</ExcludeAssets>
        </ProjectReference>
    </ItemGroup>

</Project>